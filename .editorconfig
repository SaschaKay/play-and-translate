# EditorConfig helps maintain consistent coding styles for multiple developers
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{kt,kts}]
# Kotlin / JetBrains style
ij_kotlin_allow_trailing_comma = true
ij_kotlin_align_multiline_parameters = true
ij_kotlin_align_multiline_extends_list = true
ij_kotlin_align_multiline_method_parentheses = true
ij_kotlin_align_in_columns_case_branch = true
ij_kotlin_continuation_indent_for_parameters = true
max_line_length = 120
